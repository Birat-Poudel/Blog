---
import { getCollection } from "astro:content";
import Layout from "@/layouts/Layout.astro";
import Header from "@/components/Header.astro";
import Footer from "@/components/Footer.astro";
import Socials from "@/components/Socials.astro";
import LinkButton from "@/components/LinkButton.astro";
import Card from "@/components/Card.astro";
import Hr from "@/components/Hr.astro";
import getSortedPosts from "@/utils/getSortedPosts";
import IconArrowRight from "@/assets/icons/IconArrowRight.svg";
import { SITE } from "@/config";
import { SOCIALS } from "@/constants";

const posts = await getCollection("blog");

const sortedPosts = getSortedPosts(posts);
const featuredPosts = sortedPosts.filter(({ data }) => data.featured);
const recentPosts = sortedPosts.filter(({ data }) => !data.featured);
---

<Layout>
  <Header />
  <main id="main-content" data-layout="index">
    <section id="hero" class="pt-6 pb-6 px-2 sm:pt-8">
      <div class="flex flex-col items-center gap-6 sm:gap-8 sm:flex-row sm:items-start">
        <div class="flex-shrink-0">
          <img 
            src="/biratpoudel.jpeg" 
            alt="Birat Poudel" 
            class="h-28 w-28 rounded-2xl object-cover shadow-xl sm:h-40 sm:w-40"
          />
        </div>
        <div class="flex-1 text-center sm:text-left max-w-full">
          <h1 class="my-2 text-2xl font-bold leading-tight sm:my-0 sm:text-4xl sm:leading-normal">
            AI/ML Research and Engineering
          </h1>
          <p class="mt-3 text-base sm:text-lg text-gray-600 dark:text-gray-300 leading-relaxed">
            I am <strong class="text-gray-900 dark:text-accent">Birat Poudel</strong>, an AI/ML Engineer with extensive experience in machine learning research, algorithm development, and scalable system design.
          </p>
          <p class="mt-3 text-base sm:text-lg text-gray-600 dark:text-gray-300 leading-relaxed">
            My work focuses on advancing the theoretical foundations of artificial intelligence while developing practical solutions for real-world applications.
          </p>
          <p class="mt-3 text-base sm:text-lg text-gray-600 dark:text-gray-300 leading-relaxed">
            I am driven by a commitment to pushing the boundaries of machine learning through rigorous research, innovative methodologies, and interdisciplinary collaboration.
          </p>
        </div>
      </div>

      {
        // only display if at least one social link is enabled
        SOCIALS.length > 0 && (
          <div class="flex flex-col items-center sm:flex-row sm:items-center mt-6 gap-2 sm:gap-0">
            <div class="mb-2 sm:me-2 sm:mb-0 text-base sm:text-base">Social Links:</div>
            <Socials />
          </div>
        )
      }
    </section>

    <Hr />

    {
      featuredPosts.length > 0 && (
        <>
          <section id="featured" class="pt-12 pb-6">
            <h2 class="text-2xl font-semibold tracking-wide">Featured Blogs</h2>
            <ul>
              {featuredPosts.map(data => (
                <Card variant="h3" {...data} />
              ))}
            </ul>
          </section>
          {recentPosts.length > 0 && <Hr />}
        </>
      )
    }

    {
      recentPosts.length > 0 && (
        <section id="recent-posts" class="pt-12 pb-6">
          <h2 class="text-2xl font-semibold tracking-wide">Recent Blogs</h2>
          <ul>
            {recentPosts.map(
              (data, index) =>
                index < SITE.postPerIndex && <Card variant="h3" {...data} />
            )}
          </ul>
        </section>
      )
    }

    <div class="my-8 text-center">
      <LinkButton href="/posts/">
        All Blogs
        <IconArrowRight class="inline-block rtl:-rotate-180" />
      </LinkButton>
    </div>
  </main>
  <Footer />
</Layout>

<script>
  document.addEventListener("astro:page-load", () => {
    const indexLayout = (document.querySelector("#main-content") as HTMLElement)
      ?.dataset?.layout;
    if (indexLayout) {
      sessionStorage.setItem("backUrl", "/");
    }
  });
</script>